{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "SMS-шлюз - API устройства",
    "description": "Предоставляет возможность отправки SMS при непосредственном подключении к устройству",
    "contact": {
      "name": "Солошенко Александр",
      "email": "i@capcom.me",
      "url": "https://github.com/capcom6"
    },
    "license": {
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html",
      "name": "Apache 2.0"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Device"
    },
    {
      "url": "https://sms.capcom.me/api/3rdparty/v1",
      "description": "sms.capcom.me"
    }
  ],
  "paths": {
    "/message": {
      "post": {
        "tags": [
          "Сообщения"
        ],
        "summary": "Отправить сообщение",
        "description": "Ставит переданное сообщение в очередь на отправку",
        "operationId": "post-message",
        "requestBody": {
          "$ref": "#/components/requestBodies/SendMessageRequest"
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/MessageStatusResponse"
          },
          "400": {
            "$ref": "#/components/responses/ErrorResponse"
          },
          "401": {
            "$ref": "#/components/responses/ErrorResponse"
          }
        },
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "servers": [
          {
            "url": "http://localhost:8080",
            "description": "Device"
          },
          {
            "url": "https://sms.capcom.me/api/3rdparty/v1",
            "description": "sms.capcom.me"
          }
        ]
      }
    },
    "/message/{id}": {
      "get": {
        "tags": [
          "Сообщения"
        ],
        "summary": "Получить состояние рассылки",
        "description": "Возвращает текущее состояние указанной рассылки",
        "operationId": "get-message-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "идентификатор рассылки",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/MessageStatusResponse"
          },
          "401": {
            "$ref": "#/components/responses/ErrorResponse"
          },
          "404": {
            "$ref": "#/components/responses/ErrorResponse"
          }
        },
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "servers": [
          {
            "url": "http://localhost:8080",
            "description": "Device"
          },
          {
            "url": "https://sms.capcom.me/api/3rdparty/v1",
            "description": "sms.capcom.me"
          }
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Сообщения"
    }
  ],
  "components": {
    "requestBodies": {
      "SendMessageRequest": {
        "description": "Запрос на отправку сообщения",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Message"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "description": "Авторизация по логину и паролю",
        "scheme": "basic"
      }
    },
    "responses": {
      "ErrorResponse": {
        "description": "Сообщение об ошибке",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "текст ошибки"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      },
      "MessageStatusResponse": {
        "description": "Состояние рассылки",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/MessageStatus"
            }
          }
        }
      }
    },
    "schemas": {
      "Message": {
        "type": "object",
        "title": "Рассылка",
        "properties": {
          "id": {
            "type": "string",
            "description": "идентификатор"
          },
          "message": {
            "type": "string",
            "description": "текст сообщения"
          },
          "phoneNumbers": {
            "type": "array",
            "description": "получатели сообщения",
            "items": {
              "type": "string",
              "pattern": "^\\d{11}$",
              "minLength": 11,
              "maxLength": 11
            }
          }
        },
        "required": [
          "message",
          "phoneNumbers"
        ]
      },
      "MessageStatus": {
        "type": "object",
        "title": "Состояние рассылки",
        "properties": {
          "id": {
            "type": "string",
            "description": "идентификатор"
          },
          "state": {
            "enum": [
              "Pending",
              "Sent",
              "Delivered",
              "Failed"
            ],
            "description": "состояние"
          },
          "recipients": {
            "type": "array",
            "description": "получатели",
            "items": {
              "$ref": "#/components/schemas/MessageRecipient"
            }
          }
        }
      },
      "MessageRecipient": {
        "type": "object",
        "title": "Получатель сообщения",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "description": "номер телефона",
            "pattern": "^\\d{11}$",
            "minLength": 11,
            "maxLength": 11,
            "example": "79990001234"
          },
          "state": {
            "enum": [
              "Pending",
              "Sent",
              "Delivered",
              "Failed"
            ],
            "description": "состояние"
          }
        }
      }
    }
  },
  "security": [
    {
      "BasicAuth": []
    }
  ]
}